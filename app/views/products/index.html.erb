<div class="row padding7em">
	<div class="container">
		<h2>List of products </h2><br /><br />
		<%= form_tag({:controller => 'products',:action => "index"},:method=>:post, remote: true) do %>
		<table class="table table-striped table-hover">
			<thead>
				<col width="20%">
				<tr>
					<td>Provider</td>
					<td>Country</td>
					<td>Rating</td>
					<td>Price</td>
					<td>Time To Unlock</td>
					<td></td>
				</tr>
			</thead>
			<tbody>
				<% @products.each do |p| %>
				<tr>
					<td><img src="<%=p.imageurl%>" alt="logo"/><h5><%= p.description %></h5></td>
					<td><%= p.country.name %></td>
					<td><span>☆</span><span>☆</span><span>☆</span><span>☆</span><span>☆</span></span></td>
					<td><%= p.currency.code %> <%= number_to_currency(p.price,unit: ' ') %></td>
					<td><%= p.deliveryterms %></td>
					<td><a href="<%=products_show_path%>/<%=p.id%>" class="btn btn-primary">Buy Now</a></td>
