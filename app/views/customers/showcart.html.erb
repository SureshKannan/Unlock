<%= form_tag({:controller => 'products',:action => "create"},:method=>:post) do %>
<div class="row padding7em">
	<div class="container">
		<h2>Your Order</h2><br /><br />
		<div class="row">
			<div class="col-md-offset-10 col-lg-offset-10 col-md-2 col-lg-2">
				Invoice To:
			</div>
			<div class="col-md-offset-10 col-lg-offset-10 col-md-2 col-lg-2">
				<%=@customer.firstname + ' ' + @customer.lastname%>
			</div>
		</div>
		<table class="table table-striped table-hover">
			<thead>
				<col width="20%">
				<tr>
					<td>Item Description</td>
					<td>Quantity</td>
					<td>Price</td>
					<td>Delivery Time</td>
					<td>Amount</td>
				</tr>
			</thead>
			<tbody>
				<% @cartlineitems.each do |p| %>
				<tr>
					<td>
						 <div class="thumbnail">
	            			<img src="<%=p.product.imageurl%>" alt="">
	            			<div class="caption">
	            				<h3><%= p.product.description%></h3>
	            			</div>
	            		</div>
	                
	                <h3>Delivery in <%= @product.deliveryterms %> *</h3>						
					</td>
					<td><%= p.quantity %></td>
					<td><%= p.product.currency.code %> <%= number_to_currency(p.price,unit: ' ')%> <%=p.price%></td>
					<td><%= p.product.deliveryterms%></td>
					<td><%= p.amount%></td>
				</tr>
				<% end %>
			</tbody>
			<tfoot>
				<tr>
					<td colspan="4">Total:</td>
					<td><=@totalamount></td>
				</tr>
			</tfoot>	
		</table>	
	</div>
</div>
<% end %>
